{% extends "base.html.j2" %}
{% block body %}
    <main class="grid">
        <div>
            <h1>Selected Tracks</h1>
            <table id="selected-tracks">
                <tbody>
                {% for track in selected_tracks %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ track.name }}</td>
                        <td>{{ track.artist }}</td>
                        <td>
                            <button class="secondary">Remove Song</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <h1>Search for Songs</h1>
            <form action="/search">
                <fieldset class="grid search-grid">
                    <div class="search-form-left">
                        <input name="search_term" placeholder="Artist or Song"/>
                    </div>
                    <div class="search-form-right">
                        <input type="submit" value="Search"/>
                    </div>
                </fieldset>
            </form>

            <table id="search-results">
                <thead>
                <tr>
                    <th>Add</th>
                    <th>Song Name</th>
                    <th>Artist(s)</th>
                </tr>
                </thead>
                <tbody>
                {% for track in search_results %}
                    <tr>
                        <td>
                            <button>Add</button>
                        </td>
                        <td>{{ track.name | truncate(50, True) }}</td>
                        <td>{{ track.artist | truncate(20, True) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </main>
{% endblock %}